<div class='row'>
  <div class='offset3 span6'>

    <div class='well'>
      <h2>Inscription</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
          <%= devise_error_messages! %>

          <%= render partial: 'devise/shared/additional_fields', :locals => { :f => f } %>

          <div class="control-group"><%= f.label :email, class: 'control-label' %>
            <div class="controls">
              <%= f.email_field :email, :autofocus => true %>
            </div>
          </div>

          <div class="control-group"><%= f.label :password, class: 'control-label' %>
            <div class="controls">
              <%= f.password_field :password %>
            </div>
          </div>

          <div class="control-group"><%= f.label :password_confirmation, class: 'control-label' %>
            <div class="controls">
              <%= f.password_field :password_confirmation %>
            </div>
          </div>

          <div><%= f.submit "CrÃ©er mon compte", class: 'btn' %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>