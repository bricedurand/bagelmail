<!DOCTYPE html>
<html>
<head>
  <title>BagelMail</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

<% if user_signed_in? %>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand" href="<%= letters_path %>">BagelMail</a>

        <div class="nav-collapse collapse">
          <p class="navbar-text pull-right">
            Connecté en tant que <a href="<%= account_path %>" class="navbar-link"><%= current_user.email %></a>
            <%= link_to('Déconnexion', destroy_user_session_path, :method => :delete) %>
          </p>
          <ul class="nav">
            <li class="<%= menu_active 'letters' %>"><%= link_to 'Courriers', letters_path %></li>
            <li class="<%= menu_active 'account' %>"><%= link_to 'Abonnement', subscription_path %></li>
            <li class="<%= menu_active 'help' %>"><%= link_to 'Aide', '#' %></li>
          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <%= render partial: 'shared/flash_messages' %>
  <%= yield %>
</div>

</body>
</html>
