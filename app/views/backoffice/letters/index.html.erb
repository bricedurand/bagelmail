<% title "Backoffice/Letters" %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for letter in @letters %>
    <tr>
      <td><%= letter.name %></td>
      <td><%= link_to "Show", [:backoffice, letter] %></td>
      <td><%= link_to "Edit", edit_backoffice_letter_path(letter) %></td>
      <td><%= link_to "Destroy", [:backoffice, letter], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Backoffice/Letter", new_backoffice_letter_path %></p>
