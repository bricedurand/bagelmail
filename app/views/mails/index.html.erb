<h1>Listing mails</h1>

<table>
  <tr>
    <th>User</th>
    <th>Sender</th>
    <th>Attachement count</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mails.each do |mail| %>
  <tr>
    <td><%= mail.user_id %></td>
    <td><%= mail.sender %></td>
    <td><%= mail.attachement_count %></td>
    <td><%= mail.state %></td>
    <td><%= link_to 'Show', mail %></td>
    <td><%= link_to 'Edit', edit_mail_path(mail) %></td>
    <td><%= link_to 'Destroy', mail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

